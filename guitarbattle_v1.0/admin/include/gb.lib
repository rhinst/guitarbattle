function readable_size($bytes) {
       	$amount = $bytes;
       	$suffix = "bytes";
       	if($amount >= 1024) {
               	$suffix = "KB";
               	$amount = $amount / 1024;
       	}

       	if($amount >= 1024) {
               	$suffix = "MB";
               	$amount = $amount / 1024;
       	}

       	$amount = sprintf("%.2f", $amount);

       	return($amount . " "  . $suffix);
}

